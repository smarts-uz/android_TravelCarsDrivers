<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/base_dialog_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/status_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="120dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_success" />

    <TextView
        android:id="@+id/titletextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:fontFamily="@font/nunito"
        android:textAlignment="center"
        android:textColor="#191a22"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/error_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titletextview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nunito"
        android:textAlignment="center"
        android:textColor="#54616c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/error_description_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="20dp"
        android:text="OK"
        app:backgroundTint="@color/colorPrimary"
        style="@style/ButtonStyle" />
</RelativeLayout>